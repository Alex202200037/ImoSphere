<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ImoSphere</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ImoSphere.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header Personalizado -->
    <header class="navbar">
        <div class="logo">🏙️ ImoSphere</div>
        <nav>
            <a href="@Url.Action("Index", "Home")">Home</a>
            <a href="@Url.Action("AboutUs", "Home")">About Us</a>
            <a href="@Url.Action("Properties", "Home")">Properties</a>
            <a href="@Url.Action("Services", "Home")">Services</a>
            <a href="@Url.Action("ContactUs", "Home")" class="contact-btn">Contact Us</a>
        </nav>
    </header>

    <!-- Corpo da página -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()  <!-- Aqui o conteúdo da página será inserido -->
        </main>
    </div>

    <!-- Footer Personalizado -->
    <footer class="footer">
        <div class="container">
            &copy; 2025 - ImoSphere - <a href="@Url.Action("Privacy", "Home")">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
