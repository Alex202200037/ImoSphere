@{
    ViewData["Title"] = "Properties";
}

<section class="properties">
    <h1 class="text-center">Our Properties</h1>
    <p class="text-center">Explore the wide variety of properties available with ImoSphere. Find your dream home today!</p>

    <div class="property-list">
        <div class="property-item">
            <img src="/images/moradia1.jpg" alt="Luxury Apartment" class="property-image" />
            <h2>Luxury Apartment</h2>
            <p>Located in the heart of the city, this apartment offers stunning views and modern amenities.</p>
            <p><strong>Price:</strong> $500,000</p>
            <a href="/properties/luxury-apartment" class="btn btn-primary">View Details</a>
        </div>
        <div class="property-item">
            <img src="/images/moradia2.jpg" alt="Cozy Cottage" class="property-image" />
            <h2>Cozy Cottage</h2>
            <ul class="property-features">
                <li>3 Bedrooms</li>
                <li>2 Bathrooms</li>
                <li>1,500 sq ft</li>
                <li>Large Garden</li>
                <li>Fireplace</li>
            </ul>
            <p>A charming cottage in the countryside, perfect for a peaceful retreat.</p>
            <p><strong>Price:</strong> $250,000</p>
            <a href="/properties/cozy-cottage" class="btn btn-primary">View Details</a>
        </div>
        <div class="property-item">
            <img src="/images/moradia3.jpg" alt="Beachfront Villa" class="property-image" />
            <h2>Beachfront Villa</h2>
            <p>Enjoy the ocean breeze in this luxurious villa with private beach access.</p>
            <p><strong>Price:</strong> $1,200,000</p>
            <a href="/properties/beachfront-villa" class="btn btn-primary">View Details</a>
        </div>
    </div>
</section>